generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model compagnies {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  compagny_name String  @unique
  q_parameter   String
  title         String
  location      String
  address       String
  coords        Json
  met           Boolean
  important     Boolean?
}

model qParameter {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  param    String
  location String
  lrad     Int
}

model banWords {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  word String
}

model password {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  password String
}

model lastTimeRobot {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  apiCall DateTime
  try     DateTime
}
